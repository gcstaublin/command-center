---
import "../styles/global.css";
const {
  title = "I am a title",
  description,
  hasRule,
  align = "center",
  ...attrs
} = Astro.props;
---

{/* ================================== */}
{/* HTML Structure                     */}
{/* ================================== */}
<h3
  class:list={[
    "section-header",
    { "section-header--has-rule": hasRule },
    `section-header--align-${align}`,
  ]}
>
  <span class="section-header__title">{title}</span>

  {
    description && (
      <p class="section-header__description">
        <span>{description}</span> â€“ <a href="#">See all</a>
      </p>
    )
  }
</h3>

{/* ================================== */}
{/* CSS Style                          */}
{/* ================================== */}
<style is:global>
  :root {
    --section-header-size: 0.875rem;
    --section-header-weight: 700;
    --section-header-radius: 0.25rem;
    --section-header-bg: rgb(174, 155, 133);
    --section-header-color: #fff;
    --section-header-bg-rule: rgb(235, 227, 219);
    --section-header-height-rule: 1px;
    --section-header-pad-inline: 0.625rem;
    --section-header-pad-block: 0.25rem;
  }
  .section-header {
    position: relative;
    font-size: var(--section-header-size);
    font-weight: var(--section-header-weight);
    text-align: center;
  }

  .section-header--align-left {
    text-align: left;
  }

  .section-header--has-rule {
    &::after {
      position: absolute;
      inset-inline: 0;
      inset-block-start: 50%;
      content: "";
      z-index: -1;
      border-block-end: var(--section-header-height-rule) solid
        var(--section-header-bg-rule);
    }
  }

  .section-header__title {
    display: inline-block;
    padding-block: var(--section-header-pad-block);
    padding-inline: var(--section-header-pad-inline);
    border-radius: var(--section-header-radius);
    background-color: var(--section-header-bg);
    color: var(--section-header-color);
    text-transform: uppercase;
  }

  .section-header__description {
    text-align: center;
    margin-block-start: 0.5rem;
    font-size: 14px;
    font-weight: 400;

    a {
      text-underline-offset: 2px;
      color: var(--color-action);
      font-weight: 500;
    }
  }
</style>

