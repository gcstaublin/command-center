---
import "../styles/global.css";
import needle from "../images/needle-risk.png";

const { title = "I am a title", showNew, showNeedle, ...attrs } = Astro.props;
---

{/* ================================== */}
{/* HTML Structure                     */}
{/* ================================== */}
<div class="xxx" id="updates-list">
  {
    showNew && (
      <div class="activity__new">
        <button class="activity__button">Show 14 updates</button>
      </div>
    )
  }

  {
    showNeedle && (
      <div class="activity__needle">
        <img src={needle.src} alt="" />
      </div>
    )
  }

  <ul class="updates__items updates-list__items">
    <li class="updates__item updates-list__item">
      <a href="#">On Schedule</a>, Grant S. added. Test zoom
    </li>
    <li class="updates__item updates-list__item">
      Grant S. answered: <a href="#">What the deal? </a>
      <li class="updates__item updates-list__item">
        Grant S. started an automatic check-in: <a href="#">What the deal?</a>
      </li>
      <li class="updates__item updates-list__item">
        <a href="#">On Card Table</a>, Grant S. added: Rad Card
      </li>
    </li>
  </ul>
  <a class="updates__link" href="#">See all activity</a>
</div>

{/* ================================== */}
{/* CSS Style                          */}
{/* ================================== */}
<style is:global>
  /* .activity__new {
  } */

  .activity__button {
    display: block;
    margin-block-end: 2em;
    inline-size: 100%;
    padding-block: 0.55em;
    font-size: 14px;
    background-color: var(--fill-surface-recessed);
    border: 0;
    cursor: pointer;
    border-radius: 4px;
  }

  .activity__needle {
    margin-block-end: 1.5rem;
    overflow: hidden;

    img {
      opacity: 0.84;
      display: block;
      margin-block: 0.25rem;
      margin-inline: auto;
      border-radius: 12px;
    }
  }
</style>
