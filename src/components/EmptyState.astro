---
import "../styles/global.css";

import ActivitySvg from "../svg/activity.svg";
import Dots from "../svg/dots.svg";
import LayoutStack from "./LayoutStack.astro";

const {
  title = "Keep your eye on things without leaving the home screen",
  description = "Is there an aspect of a project that you need to keep a close eye on? Wouldn't it be cool, if you could watch multiple projects simultaneously?",
  ...attrs
} = Astro.props;
---

{/* ================================== */}
{/* HTML Structure                     */}
{/* ================================== */}
<div class="empty-state">
  <div class="empty-state__inner">
    <LayoutStack distance="50">
      <header class="empty-state__header">
        <h3 class="empty-state__title">
          {title}
        </h3>
      </header>
      <div class="empty-state__content">
        <p class="empty-state__text">
          {description}
        </p>
        <div class="empty-state__icon">
          <!-- <ActivitySvg /> -->
          <div class="empty-state__button button button--outline">
            <Dots />
          </div>
        </div>
        <p class="empty-state__text empty-state__text--small">
          Visit any tool in any of your projects, select the settings button and
          click <strong>Add to Home Base</strong>. It's as easy as that.
        </p>
        <!-- <div class="empty-state__form">
          <input
            placeholder="Search for a project"
            class="empty-state__input"
            type="search"
          />
        </div> -->
      </div>
    </LayoutStack>
  </div>
</div>

{/* ================================== */}
{/* CSS Style                          */}
{/* ================================== */}
<style is:global>
  .empty-state {
    padding: 2rem;
    /* border: 1px dotted rgba(0, 0, 0, 0.5); */
    border: 1px dashed #bec0c0;
    border-radius: 20px;
    background-color: rgba(255, 255, 255, 0.4);
  }

  .empty-state__inner {
    display: flex;
    gap: 1rem;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* max-inline-size: 700px; */
    margin-inline: auto;
    text-align: center;
  }

  .empty-state__header {
    /* display: flex;
    gap: 1rem;
    align-items: center; */
  }

  .empty-state__title {
    font-weight: 500;
    font-size: 1.45rem;
    line-height: 1.2;
    letter-spacing: -0.01em;
  }

  .empty-state__icon {
    /* color: var(--color-fg-dim); */
    color: #bec0c0;
    block-size: 30px;
    inline-size: 30px;
    flex-shrink: 0;
  }

  .empty-state__input {
    width: 100%;
    border-radius: 0.4rem;
    line-height: 1.5;
    font-family: inherit;
    font-weight: inherit;
    font-size: inherit;
    color: inherit;
    padding: 0.5rem;
    border: 1px solid #bec0c0;
  }

  .empty-state__form {
    margin-block-start: 1rem;
  }

  .empty-state__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .empty-state__button {
    display: flex;
    width: 30px;
    height: 30px;
    padding-inline: 0.25rem;
    padding-block: 0.25rem;
    cursor: auto;
  }

  .empty-state__text {
    max-width: 60ch;
    text-wrap: balance;
  }

  .empty-state__text--small {
    font-size: 0.85rem;
    line-height: 1.3;
  }
</style>
