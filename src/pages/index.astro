---
import "../styles/global.css";

import grant from "../images/grant_mug.png";
import murs from "../images/murs_mug.png";

import Rad from "../svg/calendar.svg";
// import grant from "https://pbs.twimg.com/profile_images/271206022/mega_400x400.jpg";

import Card from "../components/Card.astro";
import BaseNav from "../components/BaseNav.astro";
import CardHorizontal from "../components/CardHorizontal.astro";
import Avatar from "../components/Avatar.astro";
import AvatarStack from "../components/AvatarStack.astro";
import CardDate from "../components/CardDate.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="generator" content={Astro.generator} />
    <title>Command Center</title>
  </head>
  <body>
    <BaseNav />

    <section class="dump">
      <Card />
    </section>

    <section class="dump">
      <CardHorizontal />
    </section>

    <section class="dump">
      <Avatar imgSrc={grant} />
      <Avatar imgSrc={murs} />
      <AvatarStack />
      <AvatarStack number="88" />
      <div class="rad-dude">
        <Rad />
      </div>
      <CardDate />
      <CardDate status="risk" />
    </section>

    {/* ================================== */}
    {/* Style                              */}
    {/* ================================== */}
    <style is:global>
      .dump {
        padding: 4rem;

        & + & {
          margin-top: 40px;
        }
      }

      .rad-dude {
        width: 40px;
        border: 1px solid green;
        color: red;
      }
    </style>
  </body>
</html>
